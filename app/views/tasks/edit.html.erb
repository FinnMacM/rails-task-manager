<div class="task-edit-container">
  <h1>Edit Task</h1>
  <%= form_with model: @task, class: "task-form" do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <%= f.submit "Save Changes", class: "submit-button" %>
  <% end %>

  <%= link_to "Back to task", task_path(@task), class: "back-link" %>
</div>
