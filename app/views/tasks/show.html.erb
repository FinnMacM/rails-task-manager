<div class="task-show-container">
  <h2 class="task-title"><%= @task.title %></h2>
  <p class="task-details"><%= @task.details %></p>

  <div class="task-actions">
    <%= link_to "Edit task", edit_task_path(@task), class: "action-link edit" %>
    <%#= link_to "Delete", task_path(@task), method: :delete, class: "action-link delete" %>
    <%= form_for(@task, method: :delete) do |f| %>
      <%= f.submit "Delete", class: "action-link delete" %>
    <% end %>
    <%= link_to "Back to list", index_path, class: "action-link back" %>
  </div>
</div>
