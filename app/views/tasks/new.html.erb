<div class="task-new-container">
  <h1>Add Task</h1>
  <%= form_with model: @task, class: "task-form" do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <%= f.submit "Create Task", class: "submit-button" %>
  <% end %>

  <h3><%= link_to "Back to tasks", index_path, class: "back-link" %></h3>
</div>
